<%# locals: (model:, url:) %>

<%= form_for(
      model,
      url:,
      method: :post,
      data: { controller: "form" }
    ) do |f| %>
  <%= select_tag(
        f.field_name(:category_slug),
        grouped_options_for_select(
          TransactionCategory::Definition.grouped_options,
          model.category&.slug,
        ),
        include_blank: "None",
        data: { action: "change->form#submit" }
      ) %>
<% end %>
