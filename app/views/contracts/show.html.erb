<% title "Sign your HCB contract" %>

<script src="https://cdn.docuseal.com/js/form.js"></script>

<h2>Sign your HCB contract</h2>

<div class="grid grid-cols-5 gap-5" data-controller="contract">
  <div class="max-h-[75vh] overflow-scroll col-span-3">
    <docuseal-form
      id="docusealForm"
      data-src=<%= @docuseal_url %>
      data-action="completed->contract#completed declined->contract#void"
    </docuseal-form>
  </div>
  <div class="flex flex-col justify-between col-span-2">
    <%= render "application/callout", title: "Questions about the HCB contract?", type: "info", class: "mt-0", footer: :questions do %>
      <p>
        <span class="font-bold">Why do I need to sign this contract?</span><br>
        This contract is lorem ipsum
      </p>
      <br>
      <p>
        <span class="font-bold">What does x mean?</span><br>
        X means that lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum
      </p>
      <br>
    <% end %>
    <%= link_to "Done", @advance_path, class: "btn", data: { "contract-target": "doneButton" }, disabled: true %>
  </div>
</div>
