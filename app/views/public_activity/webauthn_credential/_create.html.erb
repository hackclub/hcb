<% current_user ||= local_assigns[:p][:current_user] %>

<%= render layout: "/public_activity/common", locals: { activity:, current_user:, url: current_user == activity.owner ? settings_security_path : security_user_path(activity.owner) } do %>
  <% if activity.trackable.present? %>
    set up a new security key: <%= activity.trackable.name %>
  <% else %>
    set up a new security key
  <% end %>
<% end %>
