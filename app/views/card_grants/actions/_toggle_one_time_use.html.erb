<%# locals: (card_grant:) %>

<% totu_tooltip = card_grant.one_time_use ? "Allow for unlimited authorizations on this card" : "Lock the card after one purchase" %>
<div class="tooltipped tooltipped--n" aria-label="<%= policy(card_grant).toggle_one_time_use? ? totu_tooltip : "You don't have permission to perform this action" %>">
  <%= link_to toggle_one_time_use_event_card_grant_path(id: card_grant.hashid, event_id: @event.slug),
              method: :post,
              class: "btn bg-slate",
              disabled: !policy(card_grant).toggle_one_time_use? do %>
    <%= inline_icon "private", size: 20 %> <%= card_grant.one_time_use ? "Disable" : "Enable" %> one time use
  <% end %>
</div>
