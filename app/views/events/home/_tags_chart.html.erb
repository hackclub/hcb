<%= turbo_frame_tag "tags" do %>
  <div id="tags-chart">
    <% if tags.empty? %>
      <div class="flex flex-1 flex-col items-center justify-center">
        <div class="text-center">
          <h3 class="text-2xl font-bold mb-0">
            It's quiet here...
          </h3>
          <p class="text-gray-500 my-1 max-w-sm">
            Either you don't have any tags, or you haven't categorized any transactions yet.
          </p>
        </div>
      </div>
    <% else %>
      <h3 class="mt2 mb2">Top tags</h3>
      <%= react_component "home/Tags", { data: tags }, { camelize_props: false } %>
    <% end %>
  </div>
<% end %>
