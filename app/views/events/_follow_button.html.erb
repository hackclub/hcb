<% if Flipper.enabled?(:organization_announcements_tier_1_2025_07_07, @event) %>
  <% if !@event_follow.present? || !signed_in? %>
    <%= button_to event_follows_path(@event), method: :post, class: "btn bg-blue flex items-center" do %>
      <%= inline_icon "event-check" %>
      Follow
    <% end %>
  <% else %>
    <%= button_to follow_path(id: @event_follow.id), method: :delete, class: "btn bg-blue flex items-center" do %>
      <%= inline_icon "reply" %>
      Unfollow
    <% end %>
  <% end %>
<% end %>
