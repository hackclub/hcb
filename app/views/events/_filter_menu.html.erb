<% ledger_turbo_frame_id = "#{dom_id(@event)}_ledger" %>

<div data-controller="menu" data-menu-append-to-value="turbo-frame#<%= ledger_turbo_frame_id %>" data-menu-placement-value="bottom-start">
  <button
    type="button"
    aria-label="Add filter..."
    class="tooltipped tooltipped--s pop menu__toggle menu__toggle--arrowless overflow-visible"
    data-menu-target="toggle" data-action="menu#toggle click@document->menu#close keydown@document->menu#keydown">
    <%= inline_icon "filter", size: 28 %>
  </button>
  <div class="menu__content menu__content--2 menu__content--compact h5 w-[350px] h-[400px] p-0" data-menu-target="content" data-controller="filter">
    <div class="grid grid-cols-3 h-full gap-0" data-controller="tabs" data-tabs-default-tab-value="<%= @tag ? "tags" : @user ? "user" : @type ? "type" : @start_date || @end_date ? "date" : @maximum_amount || @minimum_amount ? "amount" : @event.tags.size > 0 ? "tags" : "user" %>">
      <div class="bg-smoke dark:bg-dark flex flex-col items-start gap-1 p-3">
        <% if @event.tags.size > 0 %>
          <button id="tags" data-tabs-target="btn" data-action="click->tabs#select">Tag</button>
        <% end %>
        <button id="user" data-tabs-target="btn" data-action="click->tabs#select">User</button>
        <button id="type" data-tabs-target="btn" data-action="click->tabs#select">Type</button>
        <button id="date" data-tabs-target="btn" data-action="click->tabs#select">Date</button>
        <button id="amount" data-tabs-target="btn" data-action="click->tabs#select">Amount</button>
        <button id="merchant" data-tabs-target="btn" data-action="click->tabs#select">Merchant</button>
        <button id="receipts" data-tabs-target="btn" data-action="click->tabs#select">Receipts</button>
      </div>

      <div class="col-span-2 p-2 overflow-y-scroll">
        <% if @event.tags.size > 0 %>
          <div data-tabs-target="tab" id="tags">
            <% @event.tags.order(label: :asc).each do |tag| %>
              <div class="flex items-center" data-tag="<%= tag.id %>">
                <%= link_to(event_ledger_path(@event, upsert_query_params(tag: tag.label)), class: "flex-auto menu__action #{"menu__action--active" if @tag == tag}", data: { turbo_prefetch: "false" }) do %>
                  <%= render partial: "canonical_transactions/tag_icon", locals: { tag: } %>
                  <%= tag.label %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        <div data-tabs-target="tab" id="user">
          <% @organizers.each do |position| %>
            <div class="flex items-center">
              <%= link_to(event_ledger_path(@event, upsert_query_params(user: position.user.friendly_id)), class: "flex-auto flex items-center menu__action #{"menu__action--active" if @user&.friendly_id == position.user.friendly_id}", data: { turbo_prefetch: "false" }) do %>
                <div class="avatar-grow line-height-0 mr1">
                  <%= avatar_for position.user, size: 18 %>
                </div>
                <%= position.user.name %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div data-tabs-target="tab" id="type">
          <% ["ach_transfer", "card_charge", "check_deposit", "donation", "fiscal_sponsorship_fee", "hcb_transfer", "invoice", "mailed_check", "paypal_transfer", "refund", "reimbursement", "wire"].each do |type| %>
            <div class="flex items-center">
              <%= link_to(event_ledger_path(@event, upsert_query_params(type:)), class: "flex-auto menu__action #{"menu__action--active" if @type == type}", data: { turbo_prefetch: "false" }) do %>
                <%= type.humanize.gsub("Ach", "ACH").gsub("Paypal", "PayPal").gsub("Hcb", "HCB") %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div data-tabs-target="tab" id="date">
          <%= form_with(model: false, local: true, method: :get, class: "flex-auto p1") do |form| %>
            <p class="bold mb0 mt0">Transactions after...</p>
            <%= form.date_field :start, class: "border mb1", value: @start_date %>
            <p class="bold mb0 mt0">Transactions before...</p>
            <%= form.date_field :end, class: "border mb1", value: @end_date %>

            <% request.query_parameters.except(:start, :end).each do |key, value| %>
              <%= hidden_field_tag key, value %>
            <% end %>

            <div class="flex justify-start">
              <%= form.submit "Filter transactions" %>
            </div>
          <% end %>
        </div>
        <div data-tabs-target="tab" id="amount">
          <%= form_with(model: false, local: true, method: :get, class: "flex-auto") do |form| %>
            <div class="m-2">
              <p class="bold mb-0 mt-2">Transactions more than...</p>
              <div class="flex mb1">
                <span class="bold muted flex self-end items-center justify-center" style="width: 1rem; height: 48px;">$</span>
                <%= form.number_field :minimum_amount, placeholder: "50.00", value: @minimum_amount, step: 0.01, data: { controller: "truncate-decimal", action: "truncate-decimal#truncate blur->truncate-decimal#pad" } %>
              </div>

              <p class="bold mb-0 mt-0">Transactions less than...</p>
              <div class="flex">
                <span class="bold muted flex self-end items-center justify-center" style="width: 1rem; height: 48px;">$</span>
                <%= form.number_field :maximum_amount, placeholder: "500.00", value: @maximum_amount, step: 0.01, data: { controller: "truncate-decimal", action: "truncate-decimal#truncate blur->truncate-decimal#pad" } %>
              </div>

              <% request.query_parameters.except(:minimum_amount, :maximum_amount).each do |key, value| %>
                <%= hidden_field_tag key, value %>
              <% end %>
            </div>

            <div class="flex justify-start m-1">
              <%= form.submit "Filter transactions" %>
            </div>

            <hr class="!border-muted !my-3">
            <div class="m-2">
              <p class="bold mb-0 mt-2">Revenue or expenses?</p>
            </div>
            <% ["expenses", "revenue"].each do |direction| %>
              <div class="flex items-center">
                <%= link_to(event_ledger_path(@event, upsert_query_params(direction:)), class: "flex-auto menu__action #{"menu__action--active" if @direction == direction}", data: { turbo_prefetch: "false" }) do %>
                  <%= direction.humanize %>
                <% end %>
              </div>
            <% end %>
            <div class="flex items-center">
              <%= link_to(event_ledger_path(@event, upsert_query_params(direction: nil)), class: "flex-auto menu__action #{"menu__action--active" unless @direction}", data: { turbo_prefetch: "false" }) do %>
              Both
              <% end %>
            </div>
          <% end %>
        </div>
        <div data-tabs-target="tab" id="merchant">
          <%= turbo_frame_tag :merchants_filter, src: event_merchants_filter_path(@event, merchant: @merchant), loading: :lazy, target: "event_#{@event.id}_ledger" %>
        </div>
        <div data-tabs-target="tab" id="receipts">
          <div class="flex items-center">
            <%= link_to("Missing receipts", event_ledger_path(@event, upsert_query_params(missing_receipts: true)), class: "flex-auto menu__action #{"menu__action--active" if @missing_receipts}", data: { turbo_prefetch: "false" }) %>
          </div>
          <div>
            <%= link_to("All transactions", event_ledger_path(@event, upsert_query_params(missing_receipts: nil)), class: "flex-auto menu__action #{"menu__action--active" unless @missing_receipts}", data: { turbo_prefetch: "false" }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
