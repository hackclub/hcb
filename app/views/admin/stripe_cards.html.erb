<% title "Stripe cards" %>

<%= form_with method: :get do |form| %>
  <%= form.text_field :q, value: @q, placeholder: "Search", class: "w-100" %>
<% end %>

<%= page_entries_info @cards, entry_name: "cards" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Cardholder</th>
      <th>Last 4</th>
      <th>Created</th>
      <th>Card name</th>
      <th>Status</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.id %></td>
        <td><%= link_to card.user.name, edit_user_path(card.user) %> (<%= card.user.email %>)</td>
        <td><%= card.last4 %></td>
        <td><%= card.created_at %></td>
        <td><%= card.name %></td>
        <td><%= card.status_text %></td>
        <td><%= card.physical? ? "ğŸ’³ Physical" : "ğŸ”¢ Virtual" %></td>
        <td><%= link_to "View", card %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @cards %>
