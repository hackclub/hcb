<% admin_tool do %>
💌 Bonjour!
<%= mail_to @hcb_code.receipt_upload_email, "Email me to upload your receipts" %>
<% end %>
<% admin_tool do %>
🌸 Aloha!
<%= link_to "Here's the page for attaching receipts", attach_receipt_url(@hcb_code) %>
<% end %>
<% admin_tool do %>
☎️ moshi moshi?
<%= link_to "Click to get an SMS (to #{current_user.phone_number}) of the notification", send_sms_receipt_hcb_code_path(@hcb_code), method: :post %>
<% end %>

<ul class="grid grid--medium-narrow left-align w-100 mt0" id="receipts_list">
  <%= render partial: "receipts/receipt", collection: @hcb_code.receipts.with_attached_file.includes(:user).order(created_at: :asc), as: :receipt, locals: { show_delete_button: true, link_to_file: true, popover: @frame ? "HcbCode:#{@hcb_code.hashid}" : nil } %>
</ul>
