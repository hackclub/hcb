<%# locals: (event_follows:) %>

<section class="modal modal--scroll bg-snow" data-behavior="modal" role="dialog" id="edit_following">
  <h2>Following</h2>
  <ul class="grid grid-cols-1 text-left w-full mt-2">
    <% event_follows.each do |event_follow| %>
      <li class="overflow-visible card card--hover flex flex-row justify-between items-center gap-2">
        <span class="w-full flex gap-2 items-center align-middle">
          <% if event_follow.event.logo.attached? %>
            <%= image_tag event_follow.event.logo, height: 24, width: 24, class: "rounded align-bottom" %>
          <% end %>
          <strong class="flex-grow"><%= event_follow.event.name %></strong>
          <%= pop_icon_to "member-remove",
                          follow_path(id: event_follow.id),
                          class: "error",
                          data: {
                            turbo_frame: "_top",
                            turbo_method: :DELETE,
                            turbo_confirm: "Are you sure you want to unfollow this organization?",
                          } %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
